<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="FirstName LastName"
        android:textAlignment="center"
        android:textColor="@color/textSecondary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/profile_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="FirstName LastNameEEEEEEEEEEEEEEEEEEEEEEEEe" />

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Waterloo, ON"
        android:textAlignment="center"
        android:textColor="@color/textSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/rating_count_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profile_iv"
        app:layout_constraintTop_toBottomOf="@id/username_tv"
        tools:text="Waterloo, ON" />

    <TextView
        android:id="@+id/delivery_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="23"
        android:textColor="@color/textSecondary"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/rating_count_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_iv"
        tools:text="23" />

    <TextView
        android:id="@+id/rating_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4.9"
        android:textColor="@color/textSecondary"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/upcoming_count_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delivery_count_tv"
        app:layout_constraintTop_toBottomOf="@id/profile_iv"
        tools:text="4.9" />

    <TextView
        android:id="@+id/upcoming_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/textSecondary"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rating_count_tv"
        app:layout_constraintTop_toBottomOf="@id/profile_iv"
        tools:text="2" />

    <TextView
        android:id="@+id/delivery_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deliveries"
        android:textAlignment="center"
        android:textColor="@color/textSecondary"
        app:layout_constraintEnd_toStartOf="@+id/rating_title_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delivery_count_tv" />

    <TextView
        android:id="@+id/rating_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textSecondary"
        android:text="Rating"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/upcoming_title_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delivery_title_tv"
        app:layout_constraintTop_toBottomOf="@id/rating_count_tv" />

    <TextView
        android:id="@+id/upcoming_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rating_title_tv"
        app:layout_constraintTop_toBottomOf="@id/upcoming_count_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>